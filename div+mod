#include<stdio.h>
void ans()
{
		int l,r,a;
		scanf ("%d %d %d",&l,&r,&a);
		if(l/a==r/a)
		{
			printf ("%d\n",r/a+r%a);
		}
		else
		{
			if((r/a+r%a)>(r/a-1+a-1))
			{
					printf ("%d\n",r/a+r%a);
			}
			else
			{
					printf ("%d\n",r/a-1+a-1);
			}
		}
}
int main()
{
	int t;
	scanf ("%d",&t);
	for(int i=0;i<t;++i)
	{
		ans();
	}
	return 0;
}
