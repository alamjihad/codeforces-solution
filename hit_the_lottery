#include<stdio.h>
void print(int n)
{
	int sum=0;
	while(n!=0)
	{
		if(n>=100)
		{
			sum++;
			n=n-100;
		}
		else if (n>=20)
		{
			sum++;
			n=n-20;
		}
		else if (n>=10)
		{
			sum++;
			n=n-10;
		}
		else if (n>=5)
		{
			sum++;
			n=n-5;
		}
		else
		{
			sum++;
			n=n-1;
		}
	}
	printf ("%d",sum);
}
int main()
{
	int n;
	scanf ("%d",&n);
	print(n);
	return 0;
}
